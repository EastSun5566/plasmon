{
  "name": "plasmon",
  "version": "0.0.1",
  "description": "PCMan BBS Client on Electron",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --inspect",
    "build": "esbuild app.js --bundle --platform=browser --outfile=script.js --external:electron --external:pcman --external:iconv-lite",
    "dist": "npm run build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pcman-bbs/plasmon.git"
  },
  "keywords": [
    "bbs"
  ],
  "author": "kidwm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pcman-bbs/plasmon/issues"
  },
  "build": {
    "appId": "cc.ptt.plasmon",
    "productName": "Plasmon",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "script.js",
      "b2u.json",
      "u2b.json",
      "logo.icns",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "logo.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Plasmon ${version}",
      "icon": "logo.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "logo.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    }
  },
  "dependencies": {
    "iconv-lite": "^0.7.0",
    "pcman": "^0.0.1",
    "ssh2": "^1.17.0"
  },
  "devDependencies": {
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.0"
  }
}
